<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernete-configuration SYSTEM
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
  
<hibernate-configuration>
    
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/moviedb</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root@123</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hbm2ddl.auto" >update</property>
        <property name="show_sql" >true</property>
        <mapping class="com.g30.entities.FeedBack" />
        <mapping class="com.g30.entities.User" />
        <mapping class="com.g30.entities.Movie" />
        
    </session-factory>
    
</hibernate-configuration>

